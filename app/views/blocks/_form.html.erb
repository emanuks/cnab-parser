<%= form_with(model: block) do |form| %>
  <% if block.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(block.errors.count, "error") %> prohibited this block from being saved:</h2>

      <ul>
        <% block.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col items-start">
    <div class="flex flex-row gap-5 items-center">
      <div class="flex flex-col">
        <%= form.label :name, "Name" %>
        <%= form.text_field :name, autofocus: true, class: "border rounded w-52 border-zinc-300 mt-2 mb-4 p-1 outline-indigo-600" %>

        <%= form.file_field :cnab, multiple: false, class: "my-3" %>
      </div>
    </div>

    <div class="mt-3 px-3 py-2 bg-indigo-500 w-52 text-center rounded-lg text-white hover:bg-indigo-600 focus:outline-none focus:bg-indigo-600">
      <%= form.submit "Upload New CNAB File" %>
    </div>
  </div>
<% end %>
